{
  "name": "fumikito/kyom",
  "description": "A WordPress theme for self branding.",
  "type": "wordpress-theme",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "lint": [
      "vendor/bin/phpcs --standard=phpcs.ruleset.xml $(find . -name '*.php')"
    ],
    "test": "phpunit"
  },
  "authors": [
    {
      "name": "fumikito",
      "email": "guy@hametuha.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4",
    "masterminds/html5": "^2.3",
    "kunoichi/theme-customizer": "^1.0",
    "kunoichi/set-menu": "^1.0",
    "kunoichi/ga-communicator": "^3.6"
  },
  "require-dev": {
    "phpunit/phpunit": ">=6",
    "squizlabs/php_codesniffer": "^3.3",
    "wp-coding-standards/wpcs": "^2.0",
    "yoast/phpunit-polyfills": "^1.0",
	"phpcompatibility/php-compatibility": "^9.3",
	"dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "autoload": {
    "psr-0": {
      "Fumikito\\Kyom": "app"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
