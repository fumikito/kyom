{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "kyom/hero",
	"version": "1.0.0",
	"title": "Hero Unit",
	"category": "kyom",
	"icon": "cover-image",
	"description": "大きなヒーローセクションを表示します。",
	"keywords": ["hero", "ヒーロー", "カバー"],
	"textdomain": "kyom",
	"attributes": {
		"title": {
			"type": "string",
			"default": ""
		},
		"background": {
			"type": "number",
			"default": 0
		},
		"textColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"textBackground": {
			"type": "string",
			"default": ""
		},
		"align": {
			"type": "string",
			"default": "center",
			"enum": ["left", "center", "right"]
		},
		"content": {
			"type": "string",
			"default": ""
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"]
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"render": "file:./render.php"
}
